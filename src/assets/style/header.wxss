.header {
  background: #2b3a4b;
  width: 100%;
  height: 90px;
  box-shadow: 0px -1px 0px 0px #DBDBDB;
  border-bottom: 1px solid #DBDBDB;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 78px;
}
.header_title {
  font-size: 30px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #fff;
  line-height: 42px;
}
.header_tab {
  display: flex;
  align-items: center;
  color: #fff;
}
.header_tab div {
  margin-left: 60px;
  line-height: 40px;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}
.header_tab div .line {
  margin-left: 0;
  width: 72px;
  height: 2px;
  background: transparent;
}
.header_tab div img {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  margin-right: 4px;
}
.header_tab div.activity .line {
  background: linear-gradient(88.57deg, #FFEA7D -41.16%, #F19090 32.99%, #ba9756 99.49%);
}
.header_tab .tab_btn {
  width: 120px;
  height: 40px;
  background: #df9100;
  border-radius: 20px;
}
.header_tab .user_box .user_img {
  width: 40px;
  margin-left: 8px;
}
.header_tab .user_box .user_img img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.header .flex_row {
  display: flex;
  align-items: center;
  flex-direction: row;
}
