.footer {
  width: 100%;
  background: #2A2522;
  font-weight: 500;
  color: #FFFFFF;
  font-family: PingFangSC-Regular, PingFang SC;
}
.footer_top {
  height: 183px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_top div {
  font-size: 14px;
}
.footer_top div span {
  margin-right: 40px;
}
.footer_top_title {
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 22px;
  margin-bottom: 20px;
}
.footer_top_right {
  margin-left: 103px;
}
.footer_top_right .circle svg {
  margin-right: 20px;
}
.footer_bottom {
  font-size: 14px;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.4;
}
a {
  color: #fff;
}